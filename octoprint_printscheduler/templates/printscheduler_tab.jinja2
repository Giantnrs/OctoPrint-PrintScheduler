<div class="row-fluid listheader">
    <div class="span3">Start At</div>
    <div class="span2">Repeat Daily</div>
    <div class="span4 file_path">File</div>
    <div class="span3 listactions">
        <button class="btn btn-primary" data-bind="click: saveScheduledJobs, visible: needs_saving(), disable: settingsViewModel.sending()" title="Save all changes."><i class="fa" data-bind="css: {'fa-save': !settingsViewModel.sending(), 'fa-spinner': settingsViewModel.sending(), 'fa-spin': settingsViewModel.sending()}"></i> <span data-bind="text: settingsViewModel.sending() ? 'Saving' : 'Save'"></span></button>
        <button class="btn btn-danger" data-bind="click: removeAllJobs, visible: settingsViewModel.settings.plugins.printscheduler.scheduled_jobs().length" title="Remove all scheduled prints."><i class="fa fa-trash-o"></i> Clear</button>
    </div>
</div>
<div data-bind="foreach: settingsViewModel.settings.plugins.printscheduler.scheduled_jobs" class="row-fluid filelist">
    <div class="row-fluid" data-bind="css: {'changed': $root.start_at_changed_for.indexOf($data.name() + '-' + $data.start_at()) > -1}">
        <div class="span3">
            <div class="controls">
                <input type="text" class="input-block-level" data-bind="value: start_at, datetimepicker: start_at, datetimepickerOptions: {step: 5, format: 'YYYY-MM-DD HH:mm', theme: $root.settingsViewModel.settings.plugins.printscheduler.theme()}, event: {change: $root.start_at_changed}" />
            </div>
        </div>
        <div class="span2">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox" data-bind="checked: repeat_daily, event: {change: $root.repeat_daily_changed}" title="Repeat this job every day" />
                    <i class="fa fa-repeat"></i>
                </label>
            </div>
        </div>
        <div class="span6 file_path" data-bind="text: name, attr: {title: path}"></div>
        <div class="span1 btn-group">
            <button class="btn btn-danger" data-bind="click: $root.removeJob" title="Remove scheduled print."><i class="fa fa-trash-o"></i></button>
        </div>
    </div>
</div>
